<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AgencyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlanePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainPrice)
        </th>
