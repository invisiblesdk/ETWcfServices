        @Html.DisplayFor(modelItem => item.AgencyName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PlanePrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TrainPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BusPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OtherPrice)
    </td>
